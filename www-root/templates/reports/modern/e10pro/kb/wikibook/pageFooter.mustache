<style>
	table.footer{
		font-family: Arial, Helvetica, sans-serif;
		font-size: 6pt;
		width: 100%;
		margin-left: 1cm;
		margin-right: 1cm;
		border-collapse: collapse;
	}

	td.ownerInfo {text-align: left; line-height: 1.5;}
	td.author {text-align: right; vertical-align: bottom;}
	td.logo {text-align: right; width: 33.3%;}
	img.logo {height: 1.30em;  position: relative;}
	td.page {text-align: right; width: 33.3%;}
</style>


<table class='footer'>
	<tr>
		<td class="ownerInfo">
			{{data.owner.fullName}}
		</td>
		<td class='page'>
		<small>Verze {{data.bookVersionId}}</small>&nbsp;
		{{@dict;Strana}} <span class="pageNumber"></span> / <span class="totalPages"></span>
		</td>
	</tr>
	<tr>
		<td class="ownerInfo">
			{{#data.reportTexts.contactsFooter}}{{{data.reportTexts.contactsFooter}}}{{/data.reportTexts.contactsFooter}}
			{{^data.reportTexts.contactsFooter}}
				{{#data.owner_identifiers}}
					<span style="white-space: pre;"><b>{{name}}:</b> {{value}}</span>
				{{/data.owner_identifiers}}
				{{#data.owner_contacts}}
					<span style="white-space: pre;"><b>{{name}}:</b> {{value}}</span>
				{{/data.owner_contacts}}
			{{/data.reportTexts.contactsFooter}}
		</td>
		<td class='logo'>
			{{{data.footer.logoPoweredBy}}}
		</td>
	</tr>
</table>
